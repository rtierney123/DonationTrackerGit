<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/editItemNameID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ItemName"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/editItemDateCreatedID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="dateCreated"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/editItemLocationTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Location:" />

            <EditText
                android:id="@+id/editItemLocationID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/textView18"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Short Description: " />

            <EditText
                android:id="@+id/editItemShortDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/textView19"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Long Description: " />

            <EditText
                android:id="@+id/editItemLongDescriptionID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textMultiLine"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/textView20"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Dollar Value: " />

            <EditText
                android:id="@+id/editItemValueID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/textView21"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Item Categroy: " />

            <Spinner
                android:id="@+id/editItemCategoryID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/textView22"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Comments: " />

            <EditText
                android:id="@+id/editItemCommentsID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textMultiLine"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/textView23"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Picture: " />

            <ImageView
                android:id="@+id/editItemImageID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="?attr/actionModeBackground" />

            <Button
                android:id="@+id/editItemMakeChangesID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Make Changes" />

            <Button
                android:id="@+id/editItemDeleteButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/holo_red_dark"
                android:text="Delete" />

            <Button
                android:id="@+id/editItemCancelButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cancel" />
        </LinearLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>